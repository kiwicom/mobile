{
  "name": "reactNativeApp",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "app/*",
    "packages/*"
  ],
  "scripts": {
    "android": "yarn react-native run-android",
    "build": "./scripts/buildBundle.sh",
    "graphql": "node ./scripts/getSchema.js",
    "ios": "yarn react-native run-ios",
    "lint": "yarn eslint . --report-unused-disable-directives",
    "relay": "yarn relay-compiler --src . --schema ./schema.graphql",
    "start": "yarn react-native start",
    "test": "node node_modules/jest/bin/jest.js --config=.jest.json",
    "test-ci": "./scripts/test.sh",
    "postinstall": "node ./scripts/configureApplication.js",
    "pod-install": "node ./scripts/podInstall.js",
    "release-hotels": "node ./scripts/releaseHotels.js",
    "release-android": "node ./scripts/buildAndroidSnapshots.js",
    "release-ios": "node ./scripts/releaseFramework.js",
    "playground": "node ./scripts/activatePlayground.js",
    "flow": "flow app --include-warnings",
    "deploy-translations": "yarn babel-node packages/localization/src/Deployer.js",
    "e2e-iphone": "yarn detox build  --configuration ios.sim.debug && yarn detox test --configuration ios.sim.debug",
    "e2e-ipad": "yarn detox build  --configuration ios.sim.tablet.debug && yarn detox test --configuration ios.sim.tablet.debug",
    "codepush": "node ./scripts/codePush.js"
  },
  "dependencies": {
    "react": "16.5.0",
    "react-native": "0.57.0",
    "react-native-app-registry-components-to-constants": "0.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-runtime": "7.0.0",
    "@babel/runtime": "7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.6.0",
    "babel-plugin-idx": "^2.4.0",
    "detox": "^8.2.3",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-detox": "^1.0.0",
    "eslint-plugin-flowtype": "^2.50.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.3.0",
    "find-in-files": "^0.5.0",
    "flow-bin": "^0.81.0",
    "inquirer": "^6.2.0",
    "jest": "^23.6.0",
    "metro": "^0.46.0",
    "metro-react-native-babel-preset": "^0.46.0",
    "node-fetch": "^2.2.0",
    "prettier": "^1.14.3",
    "react-native-code-push": "^5.4.2",
    "react-native-dotenv": "^0.2.0",
    "react-test-renderer": "^16.5.1",
    "regenerator-runtime": "^0.12.1",
    "url-exists": "^1.0.3"
  },
  "resolutions": {
    "**/babel-core": "7.0.0-bridge.0"
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/reactNativeApp.app",
        "build": "xcodebuild -workspace ios/reactNativeApp.xcworkspace -UseNewBuildSystem=NO -scheme reactNativeApp -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 6"
      },
      "ios.sim.tablet.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/reactNativeApp.app",
        "build": "xcodebuild -workspace ios/reactNativeApp.xcworkspace -UseNewBuildSystem=NO -scheme reactNativeApp -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPad Air 2"
      }
    },
    "test-runner": "jest"
  }
}
